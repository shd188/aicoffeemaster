/* chatbot.wxss */
.header {
  position: relative;
}

.back-button {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #fff;
  font-size: 40rpx;
}

.quick-questions {
  width: 100%;
  white-space: nowrap;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.questions-container {
  display: inline-block;
  padding: 0 20rpx;
}

.quick-question {
  display: inline-block;
  background-color: #f2ede7;
  padding: 16rpx 30rpx;
  border-radius: 36rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
}

.chat-container {
  flex-grow: 1;
  padding: 30rpx;
  height: calc(100vh - 380rpx);
  box-sizing: border-box;
}

.messages-wrapper {
  padding-bottom: 20rpx;
}

.message {
  margin-bottom: 30rpx;
  max-width: 80%;
  word-wrap: break-word;
}

.user-message {
  margin-left: auto;
  background-color: #6f4e37;
  color: #fff;
  border-radius: 36rpx 36rpx 8rpx 36rpx;
  padding: 20rpx 30rpx;
}

.bot-message {
  margin-right: auto;
  background-color: #e6ded3;
  border-radius: 36rpx 36rpx 36rpx 8rpx;
  padding: 20rpx 30rpx;
}

.typing-indicator {
  display: flex;
  align-items: center;
  margin-right: auto;
  background-color: #e6ded3;
  border-radius: 36rpx 36rpx 36rpx 8rpx;
  padding: 20rpx 30rpx;
  width: 100rpx;
}

.dot {
  width: 10rpx;
  height: 10rpx;
  background-color: #6f4e37;
  border-radius: 50%;
  margin: 0 5rpx;
  opacity: 0.6;
  animation: pulse 1.5s infinite ease-in-out;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes pulse {
  0%, 100% { opacity: 0.4; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.2); }
}

.input-area {
  padding: 30rpx;
  border-top: 2rpx solid #e6ded3;
  display: flex;
  align-items: center;
}

.input-area input {
  flex-grow: 1;
  padding: 24rpx 30rpx;
  border: 2rpx solid #d9cfc1;
  border-radius: 40rpx;
  font-size: 32rpx;
}

.send-button {
  margin-left: 20rpx;
  background-color: #6f4e37;
  color: #fff;
  border: none;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  min-height: auto;
  line-height: 1;
} 