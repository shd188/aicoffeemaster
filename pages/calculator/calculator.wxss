/* calculator.wxss */
.header {
  position: relative;
}

.back-button {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #fff;
  font-size: 40rpx;
}

.calculator-container {
  padding: 40rpx;
}

.tab-buttons {
  display: flex;
  margin-bottom: 40rpx;
}

.tab-button {
  flex: 1;
  padding: 20rpx;
  text-align: center;
  background-color: #e6ded3;
  font-size: 28rpx;
}

.tab-button.active {
  background-color: #6f4e37;
  color: #fff;
}

.tab-button:first-child {
  border-radius: 10rpx 0 0 10rpx;
}

.tab-button:last-child {
  border-radius: 0 10rpx 10rpx 0;
}

.input-group {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  margin-bottom: 16rpx;
  font-weight: 500;
  font-size: 28rpx;
}

.input-group input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #d9cfc1;
  border-radius: 10rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.picker {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #d9cfc1;
  border-radius: 10rpx;
  font-size: 32rpx;
  background-color: white;
  box-sizing: border-box;
}

.calculate-button {
  background-color: #6f4e37;
  color: #fff;
  border: none;
  padding: 30rpx;
  border-radius: 10rpx;
  width: 100%;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.result-container {
  margin-top: 60rpx;
  background-color: #f2ede7;
  padding: 40rpx;
  border-radius: 20rpx;
}

.result-title {
  margin-top: 0;
  color: #6f4e37;
  font-weight: 600;
  font-size: 32rpx;
  display: block;
  margin-bottom: 30rpx;
}

.result-item {
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.result-label {
  font-weight: 500;
} 